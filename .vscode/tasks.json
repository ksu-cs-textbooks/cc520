{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "hugo",
			"task": "server",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "hugo: Serve site",
            "dependsOn":["Refresh submodules"]
		},
		{
			"label": "Refresh submodules",
			"group": "build",
			"type": "shell",
			"command": "git",
			"args": [ "submodule", 
				"update", 
				"--recursive", 
				"--remote" ]
		  }
	],
	"explorer.sortOrder": "mixed"
}